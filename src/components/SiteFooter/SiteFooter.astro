---
import Link from '~/components/Link.astro'
import VisuallyHidden from '~/components/VisuallyHidden.astro'
import { linkedin, github, rss } from '~/lib/socialLinks'
---

<footer role="contentinfo">
	<VisuallyHidden as="hr" />
	<div>
		<ul>
			<li>
				<Link translate="no" href={linkedin} class="linkedin">
					<VisuallyHidden as="span">LinkedIn</VisuallyHidden>
				</Link>
			</li>
			<li>
				<Link translate="no" href={github} class="github">
					<VisuallyHidden as="span">GitHub</VisuallyHidden>
				</Link>
			</li>
			<li>
				<Link translate="no" href={rss} class="rss">
					<VisuallyHidden as="span">RSS</VisuallyHidden>
				</Link>
			</li>
		</ul>
	</div>
	<span class="credit">Â© Baraq Kamsani.</span>
</footer>

<style>
	@layer footer.reset {
		ul, li {
			list-style: none;
			padding: 0;
			margin: 0;
		}
	}

	footer {
		border-block-start: 2px solid oklch(92% 0.005 265);
		max-width: calc(42.875rem + 60px + (var(--padding-inline) * 2));
		display: flex;
		flex-direction: row-reverse;
		justify-content: space-between;
		margin-inline: auto;
		align-items: center;
		margin-block-start: 1rem;
		padding-block-start: 1rem;
		padding-block-end: 1rem;
		font-size: 0.85rem;
		color: oklch(50% 0.012 285 / 85%);
	}

	a:not(:hover, :focus-visible, :active) {
		color: oklch(50% 0.012 285 / 85%);
	}

	a:hover, a:focus-visible, a:active {
		color: oklch(25% 0.012 285 / 100%);
	}

	span {
		padding-inline: 1em;
	}

	ul {
		padding-inline-end: 1em;
		font-size: 105%;
		display: flex;
		gap: 1ch;
	}

	a:before {
		content: "";
		-webkit-mask: var(--icon) no-repeat;
		mask: var(--icon) no-repeat;
		-webkit-mask-size: 100% 100%;
		mask-size: 100% 100%;
		background-color: currentColor;
		color: inherit;
		display: inline-block;
		height: 1.125em;
		width: 1.125em;
		vertical-align: center
	}

	.linkedin:before {
		--icon: url("data:image/svg+xml;utf8,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg' %3E%3Cpath fill='currentColor' d='M6.94 5a2 2 0 1 1-4-.002a2 2 0 0 1 4 .002M7 8.48H3V21h4zm6.32 0H9.34V21h3.94v-6.57c0-3.66 4.77-4 4.77 0V21H22v-7.93c0-6.17-7.06-5.94-8.72-2.91z'/%3E%3C/svg%3E");
	}

	.github:before {
		--icon: url("data:image/svg+xml;utf8,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg' %3E%3Cpath fill='currentColor' d='M12.001 2c-5.525 0-10 4.475-10 10a9.99 9.99 0 0 0 6.837 9.488c.5.087.688-.213.688-.476c0-.237-.013-1.024-.013-1.862c-2.512.463-3.162-.612-3.362-1.175c-.113-.288-.6-1.175-1.025-1.413c-.35-.187-.85-.65-.013-.662c.788-.013 1.35.725 1.538 1.025c.9 1.512 2.337 1.087 2.912.825c.088-.65.35-1.087.638-1.337c-2.225-.25-4.55-1.113-4.55-4.938c0-1.088.387-1.987 1.025-2.687c-.1-.25-.45-1.275.1-2.65c0 0 .837-.263 2.75 1.024a9.3 9.3 0 0 1 2.5-.337c.85 0 1.7.112 2.5.337c1.913-1.3 2.75-1.024 2.75-1.024c.55 1.375.2 2.4.1 2.65c.637.7 1.025 1.587 1.025 2.687c0 3.838-2.337 4.688-4.562 4.938c.362.312.675.912.675 1.85c0 1.337-.013 2.412-.013 2.75c0 .262.188.574.688.474A10.02 10.02 0 0 0 22 12c0-5.525-4.475-10-10-10'/%3E%3C/svg%3E");
	}

	.rss:before {
		--icon: url("data:image/svg+xml;utf8,%3Csvg viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg' %3E%3Cpath fill='currentColor' d='M3 3c9.941 0 18 8.059 18 18h-3c0-8.284-6.716-15-15-15zm0 7c6.075 0 11 4.925 11 11h-3a8 8 0 0 0-8-8zm0 7a4 4 0 0 1 4 4H3z'/%3E%3C/svg%3E");
